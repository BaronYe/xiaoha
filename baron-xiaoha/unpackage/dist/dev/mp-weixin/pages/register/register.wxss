.top-bar {
  position: absolute;
  top: 0;
  width: 100%;
  height: 88rpx;
  padding-top: 25px;
  box-sizing: border-box;
  background: #ffffff;
  margin-top: 16rpx;
}
.top-bar .top-bar-left {
  float: left;
  padding-left: 24rpx;
  padding-top: 20rpx;
}
.top-bar .top-bar-left .back {
  width: 48rpx;
  height: 48rpx;
}
.top-bar .top-bar-right {
  float: right;
  margin-bottom: 30rpx;
  padding-right: 24rpx;
  padding-top: 20rpx;
}
.top-bar .top-bar-right .close {
  width: 48rpx;
  height: 48rpx;
}
.logo {
  padding-top: 100rpx;
}
.logo .logo-image {
  width: 400rpx;
  height: 400rpx;
}
.main {
  padding: 54rpx 60rpx 120rpx;
}
.main .inputs .input {
  border: none;
  height: 60rpx;
  width: 628rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #272832;
  line-height: 88rpx;
  border-bottom: 1rpx solid #cfced3;
}
.main .inputs .inputs-div {
  position: relative;
  padding: 20rpx;
}
.main .inputs .employ,
.main .inputs .checknumber {
  position: absolute;
  top: 100rpx;
  left: 10rpx;
  margin-top: 20rpx;
  margin-left: 5rpx;
  font-size: 22rpx;
  color: #F07373;
}
.main .inputs .invalid {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  float: right;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #ff5d5b;
  line-height: 40rpx;
  padding-left: 10rpx;
}
.main .inputs .show {
  position: absolute;
  right: 30rpx;
  top: 20rpx;
  width: 42rpx;
  height: 32rpx;
}
.main .inputs .ok {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 42rpx;
  height: 32rpx;
}
.submit {
  margin: 0 auto;
  width: 520rpx;
  height: 96rpx;
  background: #3c7de9;
  box-shadow: 0px 25px 16px -18px #3c7de9;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 520;
  color: white;
  line-height: 96rpx;
  text-align: center;
}
.submit:active {
  background-color: #48689e;
}

