.top-bar {
  position: absolute;
  top: 0;
  width: 100%;
  height: 88rpx;
  box-sizing: border-box;
  background: #ffffff;
}
.top-bar .top-bar-left {
  float: left;
  margin-left: 50rpx;
}
.top-bar .top-bar-left .text {
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 510;
  color: #333333;
  line-height: 88rpx;
  padding-right: 56rpx;
}
.logo {
  padding-top: 100rpx;
}
.logo .logo-image {
  width: 400rpx;
  height: 400rpx;
}
.main {
  width: 100%;
  padding-left: 120rpx;
  padding-bottom: 200rpx;
}
.main .title {
  font-size: 56rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #272832;
  line-height: 80rpx;
}
.main .slogan {
  text-align: center;
  padding-right: 90rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #32373f;
  line-height: 56rpx;
}
.main .inputs {
  padding-top: 48rpx;
}
.main .inputs .input {
  height: 88rpx;
  width: 628rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #272832;
  line-height: 88rpx;
  border-bottom: 0.2rpx solid #cfced3;
}
.main .tips {
  float: left;
  font-size: 32rpx;
  color: #ff5d5b;
  line-height: 56rpx;
}
.submit {
  margin: 0 auto;
  width: 520rpx;
  height: 96rpx;
  background: #3c7de9;
  box-shadow: 0px 25px 16px -18px #3c7de9;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 520;
  color: white;
  line-height: 96rpx;
  text-align: center;
}
.submit:active {
  background-color: #48689e;
}

