.tap-main .tap-main-left {
  position: absolute;
  top: 60rpx;
  left: 30rpx;
  float: left;
}
.tap-main .tap-main-left image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
}
.tap-main .tap-main-right {
  position: absolute;
  top: 60rpx;
  left: 250rpx;
  text-align: left;
  line-height: 50rpx;
  font-weight: bold;
}
.tap-main .tap-main-right .name {
