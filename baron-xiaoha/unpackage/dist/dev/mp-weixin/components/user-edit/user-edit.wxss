.pop-content {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: white;
  z-index: 2;
}
.pop-content .top-bar {
  width: 100%;
  height: 88rpx;
}
.pop-content .top-bar .back {
  float: left;
}
.pop-content .top-bar .back image {
  width: 50rpx;
  height: 50rpx;
}
.pop-content .top-bar .mine {
  text-align: center;
  font-size: 20px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #272832;
  line-height: 28px;
}
.pop-content .pop-cell {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 90rpx;
  margin-top: 20rpx;
}
.pop-content .pop-cell:active {
  background-color: #f3f4f6;
}
.pop-content .pop-cell .pop-cell-left {
  margin-top: 25rpx;
  margin-left: 30rpx;
  font-size: 16px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #272832;
  line-height: 22px;
}
.pop-content .pop-cell .pop-cell-center {
  margin-top: 25rpx;
  margin-left: 30rpx;
  font-size: 16px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(39, 40, 50, 0.6);
  line-height: 22px;
}
.pop-content .pop-cell .pop-cell-right {
  position: fixed;
  right: 20rpx;
  margin-top: 25rpx;
}
.pop-content .pop-cell .pop-cell-right image {
  width: 40rpx;
  height: 40rpx;
}
.pop-content .out {
  position: fixed;
  right: 300rpx;
  bottom: 50rpx;
}
.pop-content .out .out-button {
  font-size: 16px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #ff5d5b;
  line-height: 22px;
}

